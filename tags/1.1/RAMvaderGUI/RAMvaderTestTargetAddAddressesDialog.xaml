<Window x:Class="RAMvaderGUI.RAMvaderTestTargetAddAddressesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add RAMvaderTestTarget addresses" Height="300" Width="300" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" TextWrapping="WrapWithOverflow" Margin="3" TextAlignment="Justify" ><Run Text="Please, paste all addresses of the variables of the RAMvaderTarget application in the order they appear when you type the &quot;print&quot; command in that program (starting from Byte and ending in IntPtr). Addresses should be separated by new lines."/></TextBlock>
        <UniformGrid DockPanel.Dock="Bottom" Rows="1" Columns="2" >
            <Button x:Name="m_btOk" Content="OK" Margin="3" Click="m_btOk_Click" />
            <Button x:Name="m_btCancel" Content="Cancel" Margin="3" IsCancel="True" />
        </UniformGrid>
        <TextBox x:Name="m_txtAddresses" DockPanel.Dock="Top" Margin="3" AcceptsReturn="True" />
    </DockPanel>
</Window>
